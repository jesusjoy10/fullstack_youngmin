package com.company.java005_ex;

public class RepeatEx010 {
	public static void main(String[] args) {

		int count = 0;
		System.out.println("for");
		for (char a = 'A'; a <= 'Z'; a++) {
			System.out.print(a + "\t");
			count++;
			if (count == 5) {
				System.out.println();
				count = 0;
			}
		}
		System.out.println();
		int countWhile = 0;
		char b = 'A';
		System.out.println("while");
		while (b <= 'Z') {
			System.out.print(b + "\t");
			countWhile++;
			if (countWhile == 5) {
				System.out.println();
				countWhile = 0;
			}
			b++;
			System.out.println();
		}

		int countDo = 0;
		char c = 'A';
		System.out.print("do while");
		do {
			System.out.print(c + "\t");
			countDo++;
			if (countDo == 5) {
				System.out.println();
				countDo = 0;
			}
			c++;
		} while (c <= 'Z');
		System.out.println();

	}
}

/*
 * for , while , do while 3가지 버젼으로 ABCDE FGHIJ KLMNO PQRST UVWXY Z
 */