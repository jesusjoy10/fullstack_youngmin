package com.company.java004_ex;

import java.util.Scanner;

public class IfEx007 {
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		 System.out.print("1. 정수를 하나 입력해주세요 > ");
	        int num1 = scanner.nextInt();
	        System.out.print("2. 정수를 하나 입력해주세요 > ");
	        int num2 = scanner.nextInt();
	        System.out.print("3. 연산자를 입력해주세요>");
	        char ch = scanner.next().charAt(0);
	        
	        if(ch=='+') {System.out.print(num1+"+"+num2+"="+(num1+num2));}
	        
	        
	        System.out.println("1. 정수를 하나 입력해주세요 > ");
	        int num3 = scanner.nextInt();
	        System.out.println("2. 정수를 하나 입력해주세요 > ");
	        int num4 = scanner.nextInt();
	        System.out.println("3. 연산자를 입력해주세요");
	        char ch1 = scanner.next().charAt(0);
	        if(ch1=='-') {System.out.print(num3+"-"+num4+"="+(num3+num4));}
	        
	        
	        
	        
		
		
		
		
		
	

}
}