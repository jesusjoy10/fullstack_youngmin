	                System.out.printf("ê·¼ìœ¡ëŸ‰: %.1f kg / ëª©í‘œ: %.1f kg\n", muscle, GOAL_MUSCLE);
	                System.out.printf("ì²´ì§€ë°©: %.1f %% / ëª©í‘œ: %.1f %%\n", fat, GOAL_FAT);
	                System.out.printf("ëª¸ë¬´ê²Œ: %.1f kg / ëª©í‘œ: %.1f kg\n", weight, GOAL_WEIGHT);

	                if (muscle >= GOAL_MUSCLE && fat <= GOAL_FAT && weight == GOAL_WEIGHT) {
	                    System.out.println("ğŸ‰ ëª©í‘œ ë‹¬ì„±! ë°”ë””í”„ë¡œí•„ ì°ìœ¼ëŸ¬ ê°‘ì‹œë‹¤!");
	                    break; // í”„ë¡œê·¸ë¨ ì¢…ë£Œ
	                } else {
	                    System.out.println("ğŸ”¥ ì•„ì§ ëª©í‘œì— ë„ë‹¬í•˜ì§€ ëª»í–ˆìŠµë‹ˆë‹¤. í™”ì´íŒ…!");
	                }
	            }

	            else if (sel == 4) {
	                System.out.println("ëª©í‘œ ìˆ˜ì¹˜ëŠ” ë³€ê²½í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ë„ì „ë§Œì´ ì¡´ì¬í•©ë‹ˆë‹¤ ğŸ’ª");
	            }

