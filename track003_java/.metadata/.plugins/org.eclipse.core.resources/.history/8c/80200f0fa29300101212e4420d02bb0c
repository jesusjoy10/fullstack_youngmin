	 public static void main(String[] args) {
	        Scanner sc = new Scanner(System.in);

	        // ì‚¬ìš©ì ì‹ ì²´ ìƒíƒœ
	        double height = 0, weight = 0, muscle = 0, fat = 0;

	        // ëª©í‘œ ìˆ˜ì¹˜ (ê³ ì •ê°’)
