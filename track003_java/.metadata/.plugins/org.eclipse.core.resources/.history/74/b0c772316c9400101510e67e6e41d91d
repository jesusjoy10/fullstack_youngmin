package com.company.java006;

import java.util.Scanner;
import java.text.DecimalFormat;

public class Exercise_Log {
	public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // 현재 상태 입력
        System.out.print("현재 근육량(kg) 입력 > ");
        double muscle = scanner.nextDouble();

        System.out.print("현재 체지방률(%) 입력 > ");
        double fat = scanner.nextDouble();

        System.out.print("현재 몸무게(kg) 입력 > ");
        double weight = scanner.nextDouble();

        // 목표 자동 계산
        double targetMuscle = muscle + 5;  // 근육 +5kg
        double targetFat = fat - 5;        // 체지방 -5%
        double targetWeight = weight - 5;  // 체중 -5kg

        System.out.println("\n=== 목표 설정 완료 ===");
        System.out.println("근육량 목표 : " + targetMuscle + " kg");
        System.out.println("체지방률 목표 : " + targetFat + " %");
        System.out.println("체중 목표 : " + targetWeight + " kg");

        // 운동 효과 규칙
        // 러닝머신 20분 -> 체중 -2kg
        // 스쿼트 50회 -> 근육 +1kg, 체지방 -0.3%
        while (true) {
            System.out.print("\n운동 선택 (1. 러닝머신 20분  2. 스쿼트 50회  9. 종료) > ");
            int choice = scanner.nextInt();

            if (choice == 9) {
                System.out.println("프로그램을 종료합니다.");
                break;
            }

            switch (choice) {
                case 1:
                    weight -= 2;
                    System.out.println("러닝머신 20분 완료! 체중 -2kg");
                    break;
                case 2:
                    muscle += 1;
                    fat -= 0.3;
                    System.out.println("스쿼트 50회 완료! 근육 +1kg, 체지방 -0.3%");
                    break;
                default:
                    System.out.println("잘못된 입력입니다.");
                    continue;
            }

            // 현재 상태 출력
            System.out.println("\n[현재 상태]");
            System.out.printf("근육량: %.1f kg / 목표: %.1f kg\n", muscle, targetMuscle);
            System.out.printf("체지방률: %.1f %% / 목표: %.1f %%\n", fat, targetFat);
            System.out.printf("체중: %.1f kg / 목표: %.1f kg\n", weight, targetWeight);

            // 목표 달성 체크 (오차범위 ±3 허용)
            boolean isMuscleOk = Math.abs(muscle - targetMuscle) <= 3;
            boolean isFatOk = Math.abs(fat - targetFat) <= 3;
            boolean isWeightOk = Math.abs(weight - targetWeight) <= 3;

            if (isMuscleOk && isFatOk && isWeightOk) {
                System.out.println("🎉 목표 달성! 축하합니다!");
                break;
            } else {
                System.out.println("🔥 아직 목표에 도달하지 못했습니다. 화이팅!");
            }
        }

        scanner.close();
    }
}