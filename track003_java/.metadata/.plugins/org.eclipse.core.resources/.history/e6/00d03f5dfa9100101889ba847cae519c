package com.company.java007_ex;

public class Array2Ex008 {
    public static void main(String[] args) {
        // 바로 result 배열에 원본 데이터를 직접 선언해서 넣기
        int[][] result = {
            {10, 10, 10, 10, 0},
            {20, 20, 20, 20, 0},
            {30, 30, 30, 30, 0},
            {0,   0,  0,  0,  0}
        };

        // 가로/세로/전체 합 계산
        for (int ch = 0; ch < result.length - 1; ch++) {
            for (int kan = 0; kan < result[ch].length - 1; kan++) {
                result[ch][4] += result[ch][kan];       // 행 합
                result[3][kan] += result[ch][kan];       // 열 합
                result[3][4] += result[ch][kan];         // 전체 합
            }
        }

        // 출력
        for (int ch = 0; ch < result.length; ch++) {
            for (int kan = 0; kan < result[ch].length; kan++) {
                System.out.print(result[ch][kan] + "\t");
            }
            System.out.println();
        }
    }
}

/*클래스명 :  Array2Ex008
배열을 이용하여 다음의 프로그램을 작성하시오.   
1. 다음의 주어진조건을 이용하여 총점과 평균을 구하시오.

int[][] datas = {  {  10, 10, 10 ,10}, 
            {  20, 20, 20 ,20}, 
            {  30, 30, 30 ,30},  
};  // 3층 4칸 
int[][] result = new int[datas.length+1][datas[0].length+1];

#1. result 에 datas데이터 복사하기
#2. 가로방향누적데이터
#3. 세로방향데이터누적
#4. 총합

출력내용:
10   10   10   10   40   
20   20   20   20   80   
30   30   30   30   120   
60   60   60   60   240   


 */