package com.fitness.bodypro100;

import java.util.Scanner;
import java.text.DecimalFormat;

public class BodyPro100_control {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        DecimalFormat df = new DecimalFormat("0.0");

        // ì‚¬ìš©ì ì‹ ì²´ ìƒíƒœ
        double height = 0, weight = 0, muscle = 0, fat = 0;

        // ëª©í‘œ ìˆ˜ì¹˜
        final double GOAL_MUSCLE = 40.0;
        final double GOAL_FAT = 5.0;
        final double GOAL_WEIGHT = 70.0;
        int dDay = 100;

        // ì´ˆê¸° ì„¤ì •
        System.out.println("ğŸ‹ï¸â€â™‚ï¸ ë°”ë””í”„ë¡œí•„ ì±Œë¦°ì§€ ì‹œì‘ ğŸ");
        System.out.print("í‚¤(cm): ");
        height = sc.nextDouble();
        System.out.print("ëª¸ë¬´ê²Œ(kg): ");
        weight = sc.nextDouble();
        System.out.print("ê·¼ìœ¡ëŸ‰(kg): ");
        muscle = sc.nextDouble();
        System.out.print("ì²´ì§€ë°©ìœ¨(%): ");
        fat = sc.nextDouble();

        int sel = -1;

        while (true) {
            System.out.println("\n== ğŸ’ª BODYPRO_100 (D-" + dDay + ") ==");
            System.out.println("1. í˜„ì¬ ìƒíƒœ ì¡°íšŒ");
            System.out.println("2. ìš´ë™ ê¸°ë¡í•˜ê¸°");
            System.out.println("3. ëª©í‘œ í˜„í™© ë³´ê¸°");
            System.out.println("4. ëª©í‘œ ìˆ˜ì¹˜ ì´ˆê¸°í™”");
            System.out.println("9. ì¢…ë£Œ");
            System.out.print("> ");
            sel = sc.nextInt();

            if (sel == 9) {
                System.out.println("ğŸ í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œí•©ë‹ˆë‹¤.");
                break;
            }

            switch (sel) {
                case 1:
                    System.out.println("[í˜„ì¬ ìƒíƒœ]");
                    System.out.println("í‚¤: " + df.format(height) + "cm");
                    System.out.println("ëª¸ë¬´ê²Œ: " + df.format(weight) + "kg");
                    System.out.println("ê·¼ìœ¡ëŸ‰: " + df.format(muscle) + "kg");
                    System.out.println("ì²´ì§€ë°©: " + df.format(fat) + "%");
                    break;

                case 2:
                    System.out.println("ìš´ë™ ì¢…ë¥˜ë¥¼ ì„ íƒí•˜ì„¸ìš”.");
                    System.out.println("1. ë²¤ì¹˜í”„ë ˆìŠ¤ (50íšŒë‹¹ ê·¼ìœ¡ëŸ‰ +1)");
                    System.out.println("2. í„±ê±¸ì´ (30íšŒë‹¹ ê·¼ìœ¡ëŸ‰ +1)");
                    System.out.println("3. ìŠ¤ì¿¼íŠ¸ (100íšŒë‹¹ ê·¼ìœ¡ +1, ì²´ì§€ë°© -0.3%)");
                    System.out.println("4. ëŸ°ë‹ë¨¸ì‹  (10ë¶„ë‹¹ ì²´ì§€ë°© -0.5%, ê·¼ìœ¡ëŸ‰ -0.2)");
                    System.out.print("> ");
                    int workout = sc.nextInt();

                    if (workout == 1) {
                        System.out.print("ë²¤ì¹˜í”„ë ˆìŠ¤ íšŸìˆ˜: ");
                        int reps = sc.nextInt();
                        double gain = reps / 50.0;
                        muscle += gain;
                        weight += gain * 0.8;
                        System.out.println("ê·¼ìœ¡ëŸ‰ +" + df.format(gain) + "kg");
                    } else if (workout == 2) {
                        System.out.print("í„±ê±¸ì´ íšŸìˆ˜: ");
                        int reps = sc.nextInt();
                        double gain = reps / 30.0;
                        muscle += gain;
                        weight += gain * 0.5;
                        System.out.println("ê·¼ìœ¡ëŸ‰ +" + df.format(gain) + "kg");
                    } else if (workout == 3) {
                        System.out.print("ìŠ¤ì¿¼íŠ¸ íšŸìˆ˜: ");
                        int reps = sc.nextInt();
                        double gain = reps / 100.0;
                        muscle += gain;
                        fat -= 0.3 * gain;
                        if (fat < 0) fat = 0;
                        weight += gain * 0.7 - 0.2 * gain;
                        System.out.println("ê·¼ìœ¡ëŸ‰ +" + df.format(gain) + "kg, ì²´ì§€ë°© -" + df.format(0.3 * gain) + "%");
                    } else if (workout == 4) {
                        System.out.print("ëŸ°ë‹ë¨¸ì‹  ì‹œê°„(ë¶„): ");
                        int min = sc.nextInt();
                        double fatLoss = min / 10.0 * 0.5;
                        double muscleLoss = min / 10.0 * 0.2;
                        fat -= fatLoss;
                        if (fat < 0) fat = 0;
                        muscle -= muscleLoss;
                        if (muscle < 0) muscle = 0;
                        weight -= 0.3 * (min / 10.0);
                        System.out.println("ì²´ì§€ë°© -" + df.format(fatLoss) + "%, ê·¼ìœ¡ëŸ‰ -" + df.format(muscleLoss) + "kg");
                    } else {
                        System.out.println("âŒ ì˜ëª»ëœ ì„ íƒì…ë‹ˆë‹¤.");
                        break;
                    }

                    dDay--;
                    System.out.println("D-" + dDay + " ë‚¨ì•˜ìŠµë‹ˆë‹¤.");
                    break;

                case 3:
                    System.out.println("[ëª©í‘œ í˜„í™©]");
                    System.out.println("ê·¼ìœ¡ëŸ‰: " + df.format(muscle) + "kg / ëª©í‘œ: " + GOAL_MUSCLE + "kg");
                    System.out.println("ì²´ì§€ë°©: " + df.format(fat) + "% / ëª©í‘œ: " + GOAL_FAT + "%");
                    System.out.println("ëª¸ë¬´ê²Œ: " + df.format(weight) + "kg / ëª©í‘œ: " + GOAL_WEIGHT + "kg");

                    if (muscle >= GOAL_MUSCLE && fat <= GOAL_FAT && Math.abs(weight - GOAL_WEIGHT) < 0.01) {
                        System.out.println("ğŸ‰ ëª©í‘œ ë‹¬ì„±! ë°”ë””í”„ë¡œí•„ ì°ìœ¼ëŸ¬ ê°‘ì‹œë‹¤!");
                        return; // í”„ë¡œê·¸ë¨ ì¢…ë£Œ
                    } else {
                        System.out.println("ğŸ”¥ ì•„ì§ ëª©í‘œì— ë„ë‹¬í•˜ì§€ ëª»í–ˆìŠµë‹ˆë‹¤. í™”ì´íŒ…!");
                    }
                    break;

                case 4:
                    System.out.println("ëª©í‘œ ìˆ˜ì¹˜ëŠ” ë³€ê²½í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ë„ì „ë§Œì´ ì¡´ì¬í•©ë‹ˆë‹¤ ğŸ’ª");
                    break;

                default:
                    System.out.println("âŒ ì˜ëª»ëœ ì…ë ¥ì…ë‹ˆë‹¤.");
                    break;
            }
        }

        sc.close();
    }
}
