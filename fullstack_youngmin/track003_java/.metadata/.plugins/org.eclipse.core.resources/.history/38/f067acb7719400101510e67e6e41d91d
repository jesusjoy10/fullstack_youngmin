package com.company.java006;

import java.util.Scanner;

public class Exercise_Log_Array {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        final int MAX = 10; // ìµœëŒ€ 10ëª…ì˜ ì‚¬ìš©ì
        double[] weight = new double[MAX];
        double[] muscle = new double[MAX];
        double[] fat = new double[MAX];

        double[] goalWeight = new double[MAX];
        double[] goalMuscle = new double[MAX];
        double[] goalFat = new double[MAX];
        double tolerance = 3.0; // ëª©í‘œ í—ˆìš© ì˜¤ì°¨

        int recordCount = 0;

        while (true) {
            System.out.println("\n== ğŸ’ª ìš´ë™ ê¸°ë¡ ë°°ì—´ ë²„ì „ ğŸ’ª ==");
            System.out.println("1. ì‚¬ìš©ì ì¶”ê°€");
            System.out.println("2. ìš´ë™ ê¸°ë¡");
            System.out.println("3. ëª©í‘œ í˜„í™©");
            System.out.println("4. ì¶”ì²œ ìš´ë™");
            System.out.println("9. ì¢…ë£Œ");
            System.out.print("> ");
            int sel = sc.nextInt();

            if (sel == 9) {
                System.out.println("í”„ë¡œê·¸ë¨ ì¢…ë£Œ");
                break;
            }

            if (sel == 1) { // ì‚¬ìš©ì ì¶”ê°€
                if (recordCount >= MAX) {
                    System.out.println("ìµœëŒ€ ê¸°ë¡ ìˆ˜ ì´ˆê³¼!");
                    continue;
                }
                System.out.print("ëª¸ë¬´ê²Œ(kg): ");
                weight[recordCount] = sc.nextDouble();
                System.out.print("ê·¼ìœ¡ëŸ‰(kg): ");
                muscle[recordCount] = sc.nextDouble();
                System.out.print("ì²´ì§€ë°©ìœ¨(%): ");
                fat[recordCount] = sc.nextDouble();

                // ëª©í‘œ ì„¤ì •
                goalWeight[recordCount] = weight[recordCount] - 5;
                goalMuscle[recordCount] = muscle[recordCount] + 5;
                goalFat[recordCount] = fat[recordCount] - 5;
                if (goalFat[recordCount] < 0) goalFat[recordCount] = 0;

                System.out.println("ì‚¬ìš©ì ë“±ë¡ ì™„ë£Œ!");
                recordCount++;
            } 
            else if (sel == 2) { // ìš´ë™ ê¸°ë¡
                if (recordCount == 0) {
                    System.out.println("ë“±ë¡ëœ ì‚¬ìš©ìê°€ ì—†ìŠµë‹ˆë‹¤.");
                    continue;
                }
                System.out.print("ê¸°ë¡í•  ì‚¬ìš©ì ë²ˆí˜¸ (0~" + (recordCount - 1) + "): ");
                int idx = sc.nextInt();
                if (idx < 0 || idx >= recordCount) {
                    System.out.println("ì˜ëª»ëœ ì‚¬ìš©ì ë²ˆí˜¸");
                    continue;
                }

                System.out.println("ìš´ë™ ì„ íƒ:");
                System.out.println("1. ë²¤ì¹˜í”„ë ˆìŠ¤ (50íšŒë‹¹ ê·¼ìœ¡ +1kg)");
                System.out.println("2. í„±ê±¸ì´ (30íšŒë‹¹ ê·¼ìœ¡ +1kg)");
                System.out.println("3. ìŠ¤ì¿¼íŠ¸ (50íšŒë‹¹ ê·¼ìœ¡ +1kg, ì²´ì§€ë°© -0.3%)");
                System.out.println("4. ëŸ°ë‹ë¨¸ì‹  (20ë¶„ë‹¹ ì²´ì¤‘ -2kg, ì²´ì§€ë°© -0.5%, ê·¼ìœ¡ -0.2kg)");
                int workout = sc.nextInt();

                switch (workout) {
                    case 1 -> {
                        System.out.print("ë²¤ì¹˜í”„ë ˆìŠ¤ íšŸìˆ˜: ");
                        int reps = sc.nextInt();
                        double gain = reps / 50.0;
                        muscle[idx] += gain;
                        System.out.println("ê·¼ìœ¡ëŸ‰ +" + gain + "kg");
                    }
                    case 2 -> {
                        System.out.print("í„±ê±¸ì´ íšŸìˆ˜: ");
                        int reps = sc.nextInt();
                        double gain = reps / 30.0;
                        muscle[idx] += gain;
                        System.out.println("ê·¼ìœ¡ëŸ‰ +" + gain + "kg");
                    }
                    case 3 -> {
                        System.out.print("ìŠ¤ì¿¼íŠ¸ íšŸìˆ˜: ");
                        int reps = sc.nextInt();
                        double gain = reps / 50.0;
                        muscle[idx] += gain;
                        fat[idx] -= 0.3 * gain;
                        if (fat[idx] < 0) fat[idx] = 0;
                        System.out.println("ê·¼ìœ¡ëŸ‰ +" + gain + "kg, ì²´ì§€ë°© -" + (0.3 * gain) + "%");
                    }
                    case 4 -> {
                        System.out.print("ëŸ°ë‹ë¨¸ì‹  ì‹œê°„(ë¶„): ");
                        int min = sc.nextInt();
                        double fatLoss = (min / 10.0) * 0.5;
                        double muscleLoss = (min / 10.0) * 0.2;
                        double weightLoss = (min / 20.0) * 2.0;

                        fat[idx] -= fatLoss;
                        if (fat[idx] < 0) fat[idx] = 0;
                        muscle[idx] -= muscleLoss;
                        if (muscle[idx] < 0) muscle[idx] = 0;
                        weight[idx] -= weightLoss;
                        if (weight[idx] < 0) weight[idx] = 0;

                        System.out.println("ì²´ì§€ë°© -" + fatLoss + "%, ê·¼ìœ¡ëŸ‰ -" + muscleLoss + "kg, ëª¸ë¬´ê²Œ -" + weightLoss + "kg");
                    }
                    default -> System.out.println("ì˜ëª»ëœ ì„ íƒ");
                }
            } 
            else if (sel == 3) { // ëª©í‘œ í˜„í™©
                if (recordCount == 0) {
                    System.out.println("ë“±ë¡ëœ ì‚¬ìš©ìê°€ ì—†ìŠµë‹ˆë‹¤.");
                    continue;
                }
                for (int i = 0; i < recordCount; i++) {
                    System.out.println("[" + i + "ë²ˆ ì‚¬ìš©ì]");
                    System.out.println("ê·¼ìœ¡ëŸ‰: " + muscle[i] + " / ëª©í‘œ: " + goalMuscle[i]);
                    System.out.println("ì²´ì§€ë°©: " + fat[i] + " / ëª©í‘œ: " + goalFat[i]);
                    System.out.println("ëª¸ë¬´ê²Œ: " + weight[i] + " / ëª©í‘œ: " + goalWeight[i]);

                    if (Math.abs(muscle[i] - goalMuscle[i]) <= tolerance &&
                        Math.abs(fat[i] - goalFat[i]) <= tolerance &&
                        Math.abs(weight[i] - goalWeight[i]) <= tolerance) {
                        System.out.println("ğŸ‰ ëª©í‘œ ë‹¬ì„±!");
                    } else {
                        System.out.println("ğŸ”¥ ëª©í‘œ ë¯¸ë‹¬ì„±");
                    }
                }
            } 
            else if (sel == 4) { // ì¶”ì²œ ìš´ë™
                if (recordCount == 0) {
                    System.out.println("ë“±ë¡ëœ ì‚¬ìš©ìê°€ ì—†ìŠµë‹ˆë‹¤.");
                    continue;
                }
                for (int i = 0; i < recordCount; i++) {
                    System.out.println("[" + i + "ë²ˆ ì‚¬ìš©ì ì¶”ì²œ]");
                    if (muscle[i] < goalMuscle[i] - tolerance) System.out.println("- ê·¼ìœ¡ëŸ‰ ë¶€ì¡±: ë²¤ì¹˜í”„ë ˆìŠ¤/ìŠ¤ì¿¼íŠ¸ ğŸ’ª");
                    if (fat[i] > goalFat[i] + tolerance) System.out.println("- ì²´ì§€ë°© ë§ìŒ: ëŸ°ë‹ë¨¸ì‹  ğŸƒâ€â™‚ï¸");
                    if (weight[i] > goalWeight[i] + tolerance) System.out.println("- ì²´ì¤‘ ê°ëŸ‰ í•„ìš”: ëŸ°ë‹ë¨¸ì‹  ğŸƒâ€â™‚ï¸");
                    if (Math.abs(muscle[i] - goalMuscle[i]) <= tolerance &&
                        Math.abs(fat[i] - goalFat[i]) <= tolerance &&
                        Math.abs(weight[i] - goalWeight[i]) <= tolerance) {
                        System.out.println("ğŸ‘ í˜„ì¬ ëª©í‘œ ë²”ìœ„ ì•ˆ");
                    }
                }
            } 
            else {
                System.out.println("ì˜ëª»ëœ ì…ë ¥");
            }
        }

        sc.close();
    }
}
