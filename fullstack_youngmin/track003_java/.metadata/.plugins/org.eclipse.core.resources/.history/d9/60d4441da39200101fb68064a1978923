package com.company.java006;

import java.util.Arrays;
import java.util.Scanner;

public class Exercise_Log {
	 public static void main(String[] args) {
	        String[] exerciseName = new String[3];   // ìš´ë™ëª…
	        String[] exerciseType = new String[3];   // ìš´ë™ ì¢…ë¥˜
	        int[] totalCount = new int[3];           // ëˆ„ì  íšŸìˆ˜
	        int num = -1;
	        int find = -1;
	        Scanner scanner = new Scanner(System.in);

	        while(num != 9) {
	            System.out.println(Arrays.toString(exerciseName));
	            System.out.print("\n\nğŸ‹ï¸â€â™‚ï¸ ìš´ë™ ë£¨í‹´ íŠ¸ë˜ì»¤ ğŸ‹ï¸â€â™€ï¸\n" +
	                "\n[1] ìš´ë™ ë£¨í‹´ ì¶”ê°€" +
	                "\n[2] ìš´ë™ ë£¨í‹´ ì¡°íšŒ" +
	                "\n[3] ìš´ë™ íšŸìˆ˜ ì¶”ê°€" +
	                "\n[4] ìš´ë™ ë£¨í‹´ ì‚­ì œ" +
	                "\n\në²ˆí˜¸ ì„ íƒí•˜ì„¸ìš”(ì¢…ë£Œ:9): ");
	            num = scanner.nextInt();

	            if(num == 1) {
	                find = -1;
	                for(int i=0; i<exerciseName.length; i++) {
	                    if(exerciseName[i] == null) {
	                        find = i;
	                        break;
	                    }
	                }
	                if(find == -1) {
	                    System.out.println("ë” ì´ìƒ ìš´ë™ ë£¨í‹´ì„ ì¶”ê°€í•  ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
	                    continue;
	                }
	                System.out.print("ìš´ë™ëª… ì…ë ¥ > ");
	                exerciseName[find] = scanner.next();
	                System.out.print("ìš´ë™ ì¢…ë¥˜ ì…ë ¥ (ìœ ì‚°ì†Œ/ë¬´ì‚°ì†Œ/ìŠ¤íŠ¸ë ˆì¹­) > ");
	                exerciseType[find] = scanner.next();
	                System.out.print("ì´ˆê¸° ëˆ„ì  íšŸìˆ˜ ì…ë ¥ > ");
	                totalCount[find] = scanner.nextInt();

	            } else if(num == 2 || num == 3 || num == 4) {
	                System.out.print("ìš´ë™ëª… ì…ë ¥ > ");
	                String tempName = scanner.next();

	                find = -1;
	                for(int i=0; i<exerciseName.length; i++) {
	                    if(tempName.equals(exerciseName[i])) {
	                        find = i;
	                        break;
	                    }
	                }

	                if(find == -1) {
	                    System.out.println("ìš´ë™ ë£¨í‹´ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
	                    continue;
	                }

	                switch(num) {
	                    case 2: // ì¡°íšŒ
	                        System.out.println("ìš´ë™ëª…: " + exerciseName[find]);
	                        System.out.println("ìš´ë™ ì¢…ë¥˜: " + exerciseType[find]);
	                        System.out.println("ëˆ„ì  íšŸìˆ˜: " + totalCount[find]);
	                        break;

	                    case 3: // íšŸìˆ˜ ì¶”ê°€
	                        System.out.print("ì¶”ê°€í•  ìš´ë™ íšŸìˆ˜ ì…ë ¥ > ");
	                        int addCount = scanner.nextInt();
	                        totalCount[find] += addCount;
	                        System.out.println("ëˆ„ì  íšŸìˆ˜ê°€ ì—…ë°ì´íŠ¸ ë˜ì—ˆìŠµë‹ˆë‹¤.");
	                        break;

	                    case 4: // ì‚­ì œ
	                        System.out.print("ì •ë§ë¡œ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ? (y/n) > ");
	                        if(scanner.next().toLowerCase().equals("y")) {
	                            exerciseName[find] = null;
	                            exerciseType[find] = null;
	                            totalCount[find] = 0;
	                            System.out.println("ìš´ë™ ë£¨í‹´ì´ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.");
	                        } else {
	                            System.out.println("ì‚­ì œê°€ ì·¨ì†Œë˜ì—ˆìŠµë‹ˆë‹¤.");
	                        }
	                        break;
	                }

	            } else if(num == 9) {
	                System.out.println("í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œí•©ë‹ˆë‹¤.");
	            } else {
	                System.out.println("ë©”ë‰´ë¥¼ í™•ì¸í•´ì£¼ì„¸ìš”~!");
	            }
	        }

