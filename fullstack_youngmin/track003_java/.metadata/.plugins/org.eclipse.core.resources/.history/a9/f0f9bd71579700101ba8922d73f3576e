package com.company.java009;

// 1. 클래스는 부품객체
// 2. 클래스는 속성(멤버변수)과 행위 (멤버함수)

class Animal002{
	//속성 - 멤버변수
	String name;
	int age; 
	//행위 - 멤버함수
	void show() { System.out.println(this.name + "\t" + this.age); }
}
/////////////////////////////////////////
public class Class002 {
	
	public static void main (String[] args){
	    Animal002 a1 = new Animal002();  a1. name="siu";  a1.age=3; a1.show();	
	    
	    Animal002 a2 = new Animal002();  a2. name="nyag"; a1.age=7;  a2.show();	
	}

}
/////////////////////////////////////////