package com.company.java006;

import java.util.Scanner;

public class BodyProfile_control {
	 public static void main(String[] args) {
	      //변수
	      int num = -1; 
	      String id = "", pass="";  
	      double weight=0, muscle=0, fat=0;  // 체중, 근육량, 체지방
	      Scanner scanner = new Scanner(System.in);
	      
	      //입력+처리+출력
	       for(;;){  
	          //■ 기능 1. 메뉴판
	          System.out.print("\n\n== BODY PROFILE ==" + 
	             "\n1. 회원등록" + "\n2. 조회" + "\n3. 기록 업데이트" + "\n4. 삭제" + "\n9. 종료 > "     
	          );  
	          num = scanner.nextInt();

	          //■ 기능 2. 종료
	          if(num==9){ 
	        	  System.out.println("종료합니다.");  
	        	  break;   
	          }
	          
	          //■ 기능 3. 회원등록
	          else if(num==1){ 
	             System.out.print("ID 입력 > "); id = scanner.next();
	             System.out.print("PASS 입력 > "); pass = scanner.next();
	             System.out.print("체중(kg) 입력 > "); weight = scanner.nextDouble();    
	             System.out.print("근육량(kg) 입력 > "); muscle = scanner.nextDouble();
	             System.out.print("체지방(%) 입력 > "); fat = scanner.nextDouble();
	             System.out.println("회원등록이 완료되었습니다!");
	             
	          }
	          
	          //■ 기능 4. 조회, 기록 업데이트, 삭제
	          else if(num==2 || num==3 || num==4){ 
	             //   ■1. 사용자 인증
	             System.out.print("ID 입력 > "); String tempId = scanner.next();
	             System.out.print("PASS 입력 > "); String tempPass = scanner.next();
	             if(!(id.equals(tempId) && pass.equals(tempPass))) {
	                System.out.println("아이디와 비밀번호를 확인해주세요!");
	                continue; // 인증 실패 시 아래로 진행하지 않음
	             }

	             // ■2. 각각의 처리
	             switch(num){
	                case 2 : 
	                   System.out.println("\n=== 내 바디프로필 ===");
	                   System.out.println("ID > " + id);
	                   System.out.println("체중 > " + weight + "kg");
	                   System.out.println("근육량 > " + muscle + "kg");
	                   System.out.println("체지방 > " + fat + "%"); 
	                   break;

	                case 3 : 
	                   System.out.print("새 체중(kg) 입력 > ");  weight = scanner.nextDouble();
	                   System.out.print("새 근육량(kg) 입력 > "); muscle = scanner.nextDouble();
	                   System.out.print("새 체지방(%) 입력 > "); fat = scanner.nextDouble();
	                   System.out.println("기록이 업데이트되었습니다!");
	                   break;

	                case 4 : 
	                   System.out.print("정말 삭제하시겠습니까? (y/n) > "); 
	                   String answer = scanner.next();  
	                   if(!answer.toLowerCase().equals("y")) {
	                      System.out.println("삭제를 취소했습니다."); 
	                      continue;
	                   }
	                   id=pass=""; weight=muscle=fat=0;
	                   System.out.println("삭제를 완료했습니다.");
	                   break;
	             }
	         } // end else if
	           
	      }// end for 
	   }// end main
	}//end class
