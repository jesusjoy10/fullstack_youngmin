package com.company.java006;

import java.util.Scanner;
import java.text.DecimalFormat;

public class Exercise_Log {
	public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // í˜„ì¬ ìƒíƒœ ì…ë ¥
        System.out.print("í˜„ì¬ ê·¼ìœ¡ëŸ‰(kg) ì…ë ¥ > ");
        double muscle = scanner.nextDouble();

        System.out.print("í˜„ì¬ ì²´ì§€ë°©ë¥ (%) ì…ë ¥ > ");
        double fat = scanner.nextDouble();

        System.out.print("í˜„ì¬ ëª¸ë¬´ê²Œ(kg) ì…ë ¥ > ");
        double weight = scanner.nextDouble();

        // ëª©í‘œ ìë™ ê³„ì‚°
        double targetMuscle = muscle + 5;  // ê·¼ìœ¡ +5kg
        double targetFat = fat - 5;        // ì²´ì§€ë°© -5%
        double targetWeight = weight - 5;  // ì²´ì¤‘ -5kg

        System.out.println("\n=== ëª©í‘œ ì„¤ì • ì™„ë£Œ ===");
        System.out.println("ê·¼ìœ¡ëŸ‰ ëª©í‘œ : " + targetMuscle + " kg");
        System.out.println("ì²´ì§€ë°©ë¥  ëª©í‘œ : " + targetFat + " %");
        System.out.println("ì²´ì¤‘ ëª©í‘œ : " + targetWeight + " kg");

        // ìš´ë™ íš¨ê³¼ ê·œì¹™
        // ëŸ¬ë‹ë¨¸ì‹  20ë¶„ -> ì²´ì¤‘ -2kg
        // ìŠ¤ì¿¼íŠ¸ 50íšŒ -> ê·¼ìœ¡ +1kg, ì²´ì§€ë°© -0.3%
        while (true) {
            System.out.print("\nìš´ë™ ì„ íƒ (1. ëŸ¬ë‹ë¨¸ì‹  20ë¶„  2. ìŠ¤ì¿¼íŠ¸ 50íšŒ  9. ì¢…ë£Œ) > ");
            int choice = scanner.nextInt();

            if (choice == 9) {
                System.out.println("í”„ë¡œê·¸ë¨ì„ ì¢…ë£Œí•©ë‹ˆë‹¤.");
                break;
            }

            switch (choice) {
                case 1:
                    weight -= 2;
                    System.out.println("ëŸ¬ë‹ë¨¸ì‹  20ë¶„ ì™„ë£Œ! ì²´ì¤‘ -2kg");
                    break;
                case 2:
                    muscle += 1;
                    fat -= 0.3;
                    System.out.println("ìŠ¤ì¿¼íŠ¸ 50íšŒ ì™„ë£Œ! ê·¼ìœ¡ +1kg, ì²´ì§€ë°© -0.3%");
                    break;
                default:
                    System.out.println("ì˜ëª»ëœ ì…ë ¥ì…ë‹ˆë‹¤.");
                    continue;
            }

            // í˜„ì¬ ìƒíƒœ ì¶œë ¥
            System.out.println("\n[í˜„ì¬ ìƒíƒœ]");
            System.out.printf("ê·¼ìœ¡ëŸ‰: %.1f kg / ëª©í‘œ: %.1f kg\n", muscle, targetMuscle);
            System.out.printf("ì²´ì§€ë°©ë¥ : %.1f %% / ëª©í‘œ: %.1f %%\n", fat, targetFat);
            System.out.printf("ì²´ì¤‘: %.1f kg / ëª©í‘œ: %.1f kg\n", weight, targetWeight);

            // ëª©í‘œ ë‹¬ì„± ì²´í¬ (ì˜¤ì°¨ë²”ìœ„ Â±3 í—ˆìš©)
            boolean isMuscleOk = Math.abs(muscle - targetMuscle) <= 3;
            boolean isFatOk = Math.abs(fat - targetFat) <= 3;
            boolean isWeightOk = Math.abs(weight - targetWeight) <= 3;

            if (isMuscleOk && isFatOk && isWeightOk) {
                System.out.println("ğŸ‰ ëª©í‘œ ë‹¬ì„±! ì¶•í•˜í•©ë‹ˆë‹¤!");
                break;
            } else {
                System.out.println("ğŸ”¥ ì•„ì§ ëª©í‘œì— ë„ë‹¬í•˜ì§€ ëª»í–ˆìŠµë‹ˆë‹¤. í™”ì´íŒ…!");
            }
        }

