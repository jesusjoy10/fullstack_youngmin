public class Bank_main {
     // ìƒíƒœ : ë©¤ë²„ë³€ìˆ˜
	UserInfo userinfo;
	Add      add;
	Show     show;
	Deposit  deposit;
	Withdraw withdraw;
	Delete   delete;
	Login    login;
	
	// Deposit deposit,,,,
	
	
	 // í–‰ìœ„ : ë©¤ë²„í•¨ìˆ˜ (ì´ˆê¸°í™”)
	public Bank_main() {
		this.userinfo = new UserInfo();
	    this.add      = new Add(this.userinfo);
	    this.show     = new Show(this.userinfo);
	    this.deposit  = new Deposit(this.userinfo);   // Q1.Deposit  deposit  ì…ê¸ˆê¸°ëŠ¥     ## ì¶”ê°€ 2
	    this.withdraw  = new Withdraw(this.userinfo); // Q2.Withdraw withdraw ì¶œê¸ˆê¸°ëŠ¥
	    this.delete  = new Delete(this.userinfo);     // Q1.Delete   delete   ì‚­ì œê¸°ëŠ¥
	    this.login  = new Login(this.userinfo);       // Q1.Login    run  ë©”ì„œë“œì•ˆì— ê¸°ëŠ¥
	    }
	
	public void run() {
		Scanner scanner = new Scanner(System.in);
		int num = 1;
		while(num !=9) {
			System.out.println("Main:"+this.userinfo+"\t"+ System.identityHashCode(this.userinfo));
			System.out.println("\n\nğŸŒŸğŸ’° WELCOME TO BANK SYSTEM ğŸ’°ğŸŒŸ\n" + 
	             "\n[1] â• ê³„ì¢Œ ì¶”ê°€" + "\n[2] ğŸ” ê³„ì¢Œ ì¡°íšŒ" + "\n[3] ğŸ’µ ì…ê¸ˆí•˜ê¸°" + "\n[4] ğŸ’¸ ì¶œê¸ˆí•˜ê¸°" + "\n[5] ğŸ—‘ï¸ ê³„ì¢Œ ì‚­ì œ  "
	             +"\n\nğŸ‘‰ ë²ˆí˜¸ë¥¼ ì„ íƒí•˜ì„¸ìš”:");
			num=scanner.nextInt();
			switch(num) {
			case 1 : this.add.exec(); break;
			case 2 : this.show.exec(); break;
			case 3 : this.deposit.exec(); break; //## ì¶”ê°€ 3
			case 4 : this.withdraw.exec(); break;
			case 5 : this.delete.exec(); break;
			
			
			}
		}
	}
	
	public static void main(String[] args) {
		Bank_main bank = new Bank_main();
		bank.run();
		
	}

	
}

